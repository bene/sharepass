{
    "compilerOptions": {
        "target": "es2015",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "build/"
    },
    "include": ["src/"]
}
